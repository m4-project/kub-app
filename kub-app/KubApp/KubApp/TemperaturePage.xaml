<Page
    x:Class="KubApp.TemperaturePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KubApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Name="LayoutGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Border BorderBrush="Black" BorderThickness="2" Margin="150,300,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock Name="TemperatureKub" HorizontalAlignment="Left" Margin="0,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        </Border>
        <Button Name="GoToMainPage" Content="Mainpage" Click="GoToMainPage_Click" HorizontalAlignment="Left" Margin="150,90,0,0" Background="LightGray" VerticalAlignment="Top"/>
    </Grid>
</Page>
