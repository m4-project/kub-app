        <TextBlock HorizontalAlignment="Left" Margin="117,420,0,0" TextWrapping="Wrap" Text="Status" VerticalAlignment="Top"/>
        <TextBlock Name="TemperatureKubStatus" HorizontalAlignment="Left" Margin="117,445,0,0" TextWrapping="Wrap" Text="Kub: Disconnected" VerticalAlignment="Top"/>
